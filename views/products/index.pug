extends ../layouts/common
block content
    each product in products
        .container.px-4.text-center
        .row.gx-5
            .col
                .p-3
                    .card(style='width: 18rem;')
                    img.card-img-top(src= product.image, alt='...')
                    .card-body
                        h5.card-title= product.name
                        p.card-text= product.description
                        a.btn.btn-primary(href='#') Add to card
            .col
                .p-3
                    .card(style='width: 18rem;')
                    img.card-img-top(src= product.image, alt='...')
                    .card-body
                        h5.card-title= product.name
                        p.card-text= product.description
                        a.btn.btn-primary(href='#') Add to card
            .col
                .p-3
                    .card(style='width: 18rem;')
                    img.card-img-top(src= product.image, alt='...')
                    .card-body
                        h5.card-title= product.name
                        p.card-text= product.description
                        a.btn.btn-primary(href='#') Add to card
    nav(aria-label='Page navigation example')
    ul.pagination
        li.page-item
        a.page-link(href='products?page='+(cur > 0 ? (cur - 1) : 0)) Previous
        li.page-item
        a.page-link(href='products?page=1') 1
        li.page-item
        a.page-link(href='products?page=2') 2
        li.page-item
        a.page-link(href='products?page=3') 3
        li.page-item
        a.page-link(href='products?page='+(cur < total ? (cur + 1) : total)) Next

